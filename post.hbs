{{!< default}}
{{#post}}
{{^is "page"}}
{{#match @custom.progress_bar true}}
{{#if access}}<progress class="post-progress" max="100" value="0"></progress>{{/if}}
{{/match}}
{{/is}}
<article class="post-section{{^is "page"}}{{^match @custom.sidebar "Disable"}} is-sidebar{{/match}}{{/is}}">
	{{#match @page.show_title_and_feature_image}}
	{{>posts/header}}
	{{/match}}
	<aside class="toc-container">
		<div class="toc"></div>
	</aside>
	<div class="post-wrap global-padding">
		{{^is "page"}}
        {{#match @custom.sidebar "Without Subscription form"}}
		<div class="post-sidebar">
			{{>posts/sidebar}}
		</div>
		{{/match}}
		{{#match @custom.sidebar "With Subscription form"}}
		<div class="post-sidebar">
		{{#if access}}
		{{>posts/sidebar}}
		{{>members/sidebar_form is_box=true}}
		{{else if html}}
		{{>posts/sidebar}}
		{{/if}}
		</div>
		{{/match}}
        {{#match @custom.sidebar "With sticky Subscription form"}}
		<div class="post-sidebar">
		{{#if access}}
		{{>posts/sidebar}}
		{{>members/sidebar_form is_box=true is_sticky=true}}
		{{else if html}}
		{{>posts/sidebar}}
		{{/if}}
		</div>
		{{/match}}
		{{/is}}
		<div class="post-content{{#match @custom.image_lightbox true}} enable-lightbox{{/match}}">
			{{#if access}}
			{{#match @custom.table_of_contents true}}
			<div class="table-of-contents">
				<h4>Table of Contents</h4>
				<ul id="toc-list"></ul>
			</div>
			{{/match}}
			{{content}}
			{{^is "page"}}
			{{>posts/share}}
			{{/is}}
			{{#match @custom.cta_intensity "Standard"}}
			{{>cta-box}}
			{{/match}}
			{{else}}
			{{#if html}}
			<div class="members-cta-teaser">
				{{{html}}}
			</div>
			{{/if}}
			{{!-- Show inline CTA unless set to Footer Only or None --}}
			{{^match @custom.member_cta_style "Footer Only"}}
			{{>members/cta}}
			{{/match}}
			{{/if}}
		</div>
	</div>
</article>
{{^is "page"}}
{{>posts/navigation}}
{{>posts/comments}}
{{#if primary_tag}}
{{#get "posts" limit="5" filter="tags:{{primary_tag.slug}}+id:-{{id}}" include="authors" as |special_posts|}}
	{{#if special_posts}}
		{{>related label=(t "You might also like")}}
	{{/if}}
{{/get}}
{{/if}}
{{/is}}
{{/post}}

<script src="https://cdnjs.cloudflare.com/ajax/libs/tocbot/4.18.2/tocbot.min.js"></script>
<script>
	tocbot.init({
		tocSelector: '.toc',           // Where to render the table of contents.
		contentSelector: '.post-content', // Where the headers are located.
		headingSelector: 'h1, h2, h3, h4, h5, h6', // Which headings to grab.
		hasInnerContainers: true,
		collapseDepth: 6,
	});
</script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tocbot/4.18.2/tocbot.css">