				{{>header}}
				<main class="global-main">
					{{{body}}}
				</main>
				{{>footer}}
			</div>
		</div>
		{{>members/notifications}}
		{{>search is_search_core=true}}
		<script src="{{asset "js/global.js"}}"></script>
		{{#if pagination.pages}}
		<script src="{{asset "js/index.js"}}"></script>
		{{/if}}
		{{#is "post,page"}}
		<script src="{{asset "js/post.js"}}"></script>
		{{/is}}
		{{{block "script_js"}}}
		<script>
			const aura = document.querySelector('.cursor-aura');
			let mouseX = 0;
			let mouseY = 0;
			let auraX = 0;
			let auraY = 0;

			if (aura) {
				window.addEventListener('mousemove', (e) => {
					mouseX = e.clientX;
					mouseY = e.clientY;
				});

				const interactiveElements = document.querySelectorAll('a, .gh-card, .post-card, button');
				interactiveElements.forEach((el) => {
					el.addEventListener('mouseenter', () => aura.classList.add('is-hovering'));
					el.addEventListener('mouseleave', () => aura.classList.remove('is-hovering'));
				});

				function animate() {
					auraX += (mouseX - auraX) * 0.1;
					auraY += (mouseY - auraY) * 0.1;

					aura.style.transform = `translate(calc(${auraX}px - 50%), calc(${auraY}px - 50%))`;

					requestAnimationFrame(animate);
				}
				animate();
			}
		</script>
		<div class="studio-fixed-anchor">
			<a class="brand-transition" href="https://abreeze.studio/studio">
				<svg width="48" height="48" viewBox="0 0 48 48">
